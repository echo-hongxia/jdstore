<div class="pull-right">
  <%=link_to("Add a product",new_admin_product_path,:class => "btn btn-default")%>
</div>

<br>
<table class="table table-boldered">
  <% @products.each do |product|%>
  <tr>
    <td>
      <%= link_to(product.title,admin_product_path(product)) %>
    </td>
    <td>
      <%= product.description %>
    </td>
    <td>
      <%= product.quantity %>
    </td>
    <td>
      <%= product.price%>
    </td>
    <td>
      <%= link_to("Edit",edit_admin_product_path(product))%> |
      <%= link_to("Delte",admin_products_path())%>
    </td>
  </tr>
  <% end %>
</table>
