      <div class="col-xs-6 col-md-3">
        <%= link_to product_path(product) do %>
          <% if product.image.present? %>
            <%= image_tag(product.image.thumb.url,class: "medium")%>
          <% else %>
            <%= image_tag("http://placehold.it/200x200&text=NoPic",class: "thumbnail")%>
          <% end %>
        <% end %>
        <%= product.title %>Â¥ <%= product.price%>
      </div>


  <% end %>
  </div>
</div>

