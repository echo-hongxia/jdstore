<div class="row">
<div class="lp-section-1">
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

  <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
      <div class="item active">
        <img src="https://ww1.sinaimg.cn/large/006tNbRwgy1fch3o344x9j31hc0b415x.jpg" alt="New York">
      </div>

      <div class="item">
        <img src="https://ww1.sinaimg.cn/large/006y8lVagy1fcnuvgqmp4j31hc0b47bp.jpg" alt="Chicago">
      </div>

      <div class="item">
        <img src="https://ww3.sinaimg.cn/large/006y8lVagy1fcnuvf5949j31hc0b448z.jpg" alt="Los Angeles">
      </div>
    </div>

  <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div> <!-- myCarousel-->

</div>
</div>
<div class="lp-section-2">
  <h2 class="text-center"> 新特卖早8点晚10点上新 </h2>
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-6">

        <div class="hotpic">
            <%= image_tag('http://c.vpimg1.com/upcb/2017/02/03/98/1486091531105.jpg',width: "100%",height: "100%") %>
        </div>

    </div>
    <div class="col-xs-12 col-md-6">

        <div class="hotpic">
          <%= image_tag('http://c.vpimg1.com/upcb/2017/02/08/128/22567595.jpg',width: "100%",height: "100%") %>
        </div>

    </div>
  </div>
</div>

<div class="lp-section-4">
  <h2 class="text-center"> 新品推荐</h2>
  <div class="row">
    <% @products.each do |product|%>
      <div class="col-xs-6 col-md-3">
        <div class="item">
          <%= link_to product_path(product) do %>
            <% if product.image.present? %>
              <div class="pic">
                <%= image_tag(product.image.thumb.url,size: "280x280")%>
              </div>
            <% else %>
              <div class="pic">
                <%= image_tag("http://placehold.it/200x200&text=NoPic",class: "thumbnail",size: "200x200")%>
              </div>
            <% end %>
          <% end %>
          <div class="name">
            <%= product.title %>
          </div>
          <div class="price">
            ¥ <%= product.price%>
          </div>
        </div>
     </div>
    <% end %>
  </div>
</div>
